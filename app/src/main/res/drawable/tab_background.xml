<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Selected tab state -->
    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <corners 
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <solid android:color="@color/tab_background_selected_dark" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_primary_variant" />
        </shape>
    </item>
    
    <!-- Normal tab state -->
    <item>
        <shape android:shape="rectangle">
            <corners 
                android:topLeftRadius="8dp"
                android:topRightRadius="8dp" />
            <solid android:color="@color/tab_background_dark" />
            <stroke
                android:width="1dp"
                android:color="@color/dark_surface_variant" />
        </shape>
    </item>
</selector>
