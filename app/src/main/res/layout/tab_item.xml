<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/tab_background"
    android:gravity="center_vertical"
    android:minWidth="180dp"
    android:maxWidth="240dp"
    android:orientation="horizontal"
    android:paddingStart="16dp"
    android:paddingEnd="8dp"
    android:paddingTop="6dp"
    android:paddingBottom="6dp"
    android:layout_marginEnd="1dp"
    android:elevation="1dp"
    android:clickable="true"
    android:focusable="true">

    <!-- Favicon placeholder (for future enhancement) -->
    <ImageView
        android:id="@+id/tabFavicon"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginEnd="8dp"
        android:scaleType="centerCrop"
        android:visibility="gone"
        android:contentDescription="Site icon" />

    <TextView
        android:id="@+id/tabTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="New Tab"
        android:textColor="@color/tab_text_normal_dark"
        android:textSize="13sp"
        android:fontFamily="sans-serif"
        android:lineSpacingExtra="0dp"
        android:includeFontPadding="false" />

    <ImageButton
        android:id="@+id/closeTab"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:background="@drawable/tab_close_background"
        android:contentDescription="Close Tab"
        android:scaleType="center"
        android:src="@drawable/ic_tab_close_selector"
        android:padding="4dp"
        android:clickable="true"
        android:focusable="true" />

</LinearLayout>
