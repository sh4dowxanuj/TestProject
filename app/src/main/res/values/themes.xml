<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - Dark Theme -->
    <style name="Theme.App" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <!-- Force dark theme -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Always Dark Theme -->
    <style name="Theme.App.Dark" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorOnPrimary">@color/dark_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/dark_background</item>
        <!-- Surface colors -->
        <item name="colorSurface">@color/dark_surface</item>
        <item name="colorOnSurface">@color/dark_on_surface</item>
        <!-- Background colors -->
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnBackground">@color/dark_on_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/dark_background</item>
        <!-- Navigation bar color -->
        <item name="android:navigationBarColor">@color/dark_background</item>
        <!-- Window background -->
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/text_primary_dark</item>
        <item name="android:textColorSecondary">@color/text_secondary_dark</item>
        <!-- Force dark theme -->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <!-- Customize your theme here. -->
    </style>
    
    <!-- Browser specific styles -->
    <style name="BrowserToolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/dark_surface</item>
        <item name="titleTextColor">@color/dark_on_surface</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <style name="BrowserUrlBar">
        <item name="android:background">@drawable/url_bar_background</item>
        <item name="android:textColorHint">@color/text_secondary_dark</item>
        <item name="android:textColor">@color/text_primary_dark</item>
        <item name="android:padding">12dp</item>
    </style>
</resources>
